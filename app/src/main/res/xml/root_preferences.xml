<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_group_title_connection_options">

        <SwitchPreferenceCompat
            app:key="@string/settings_key_discovery"
            app:title="@string/settings_title_discovery" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_group_title_discovery_options">

        <EditTextPreference
            app:key="@string/settings_key_custom_server_name"
            android:title="@string/setting_title_server_name"
            app:useSimpleSummaryProvider="true"/>

        <ListPreference
            app:key="@string/settings_key_selected_server"
            app:title="@string/settings_title_selected_server"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
